        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombreSolicitante\": \"Juan García López\",\n  \"importeSolicitado\": 5000.00,\n  \"divisa\": \"EUR\",\n  \"documentoIdentificativo\": \"12345678A\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/loans",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["loans"]
        }
      }
    },
